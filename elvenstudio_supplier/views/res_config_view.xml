<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="elvenstudio_view_stock_config_settings" model="ir.ui.view">
            <field name="name">stock settings</field>
            <field name="model">stock.config.settings</field>
            <field name="inherit_id" ref="stock.view_stock_config_settings"/>
            <field name="arch" type="xml">
                <xpath expr="//separator[@string='Traceability']" position="before">
                    <separator string="Supplier"/>
                    <group>
                        <label for="id" string="Supplier"/>
                        <div>
                            <div>
                                <field name="mto_route" class="oe_inline" />
                                <label for="mto_route">Regola MTO di default</label>
                            </div>
                        </div>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
