<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="elvenstudio_cost_sale_form_view">
            <field name="name">elvenstudio.product.cost.sale.form</field>
            <field name="model">product.product</field>
            <field name="priority" eval="30"/>
            <field name="inherit_id" ref="product_variant_cost.product_cost_price_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='cost_price']" position="after">
                    <field name="cost_sale" />
                </xpath>
            </field>
        </record>
    </data>
</openerp>